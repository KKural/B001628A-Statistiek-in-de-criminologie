#!/bin/bash

# Read the student's solution file
STUDENT_ANSWER=$(cat ../solution/solution.py | tr -d '\n\r\t ')

# Check the answer and provide feedback
if [ "$STUDENT_ANSWER" == "2" ]; then
  # Correct answer
  echo '{"accepted":true,"status":"correct","messages":[{"format":"markdown","description":"✓ Correct! Descriptive statistics summarize and describe the main features of collected data."}]}'
  exit 0
elif [ "$STUDENT_ANSWER" == "1" ]; then
  echo '{"accepted":false,"status":"wrong","messages":[{"format":"markdown","description":"✗ Incorrect. Predicting future outcomes belongs to inferential statistics."}]}'
  exit 1
elif [ "$STUDENT_ANSWER" == "3" ]; then
  echo '{"accepted":false,"status":"wrong","messages":[{"format":"markdown","description":"✗ Incorrect. Establishing causal relationships belongs to inferential statistics."}]}'
  exit 1
elif [ "$STUDENT_ANSWER" == "4" ]; then
  echo '{"accepted":false,"status":"wrong","messages":[{"format":"markdown","description":"✗ Incorrect. Testing hypotheses belongs to inferential statistics."}]}'
  exit 1
else
  echo '{"accepted":false,"status":"wrong","messages":[{"format":"markdown","description":"✗ Invalid answer. Please enter exactly one number: 1, 2, 3, or 4."}]}'
  exit 1
fi
